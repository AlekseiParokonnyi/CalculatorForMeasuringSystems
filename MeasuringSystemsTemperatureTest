import static org.junit.Assert.*;

import org.junit.Test;


public class MeasuringSystemsTemperatureTest
{
	@Test
	public void testTempKelvin_NegativeV()
	{
		double res = MeasuringSystemsTemperature.tempKelvin(-20);
		assertEquals(253.15, res, 0.001);
	}

	@Test
	public void testTempKelvin_0()
	{
		double res = MeasuringSystemsTemperature.tempKelvin(0);
		assertEquals(273.15, res, 0.001);
	}
	
	@Test
	public void testTempKelvin_10()
	{
		double res = MeasuringSystemsTemperature.tempKelvin(10);
		assertEquals(283.15, res, 0.001);
	}
	
	
	@Test
	public void testTempFahrenheit_NegativeV()
	{
		double res = MeasuringSystemsTemperature.tempFahrenheit(-20);
		assertEquals(-4, res, 0.001);
	}

	@Test
	public void testTempFahrenheit_0()
	{
		double res = MeasuringSystemsTemperature.tempFahrenheit(0);
		assertEquals(32, res, 0.001);
	}
	
	@Test
	public void testTempFahrenheit_10()
	{
		double res = MeasuringSystemsTemperature.tempFahrenheit(10);
		assertEquals(50, res, 0.001);
	}
	
	
